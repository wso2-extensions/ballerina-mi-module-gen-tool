<template name="init" onError="fault" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="name" description="Unique name the connection is identified by"/>
    <parameter name="connectionType" description="Connection type"/>
    <!-- TODO: if union, the selected member type becomes a parameter-->
    <sequence>
        <property name="http_ClientOAuth2Handler_objectTypeName" value="ClientOAuth2Handler"/>
        
        <property name="http_ListenerLdapUserStoreBasicAuthHandler_objectTypeName" value="ListenerLdapUserStoreBasicAuthHandler"/>
        
        <property name="http_ListenerOAuth2Handler_objectTypeName" value="ListenerOAuth2Handler"/>
        
        <property name="http_Client_objectTypeName" value="Client"/>
        
        <property name="http_Caller_objectTypeName" value="Caller"/>
        
        <property name="http_StatusCodeClient_objectTypeName" value="StatusCodeClient"/>
        
        <property name="http_FailoverClient_objectTypeName" value="FailoverClient"/>
        
        <property name="http_LoadBalanceClient_objectTypeName" value="LoadBalanceClient"/>
        
        <class name="io.ballerina.stdlib.mi.BalConnectorConfig"/>
    </sequence>
</template>
