{
  "connectorName": "{{parent.parent.moduleName}}",
  "connectionName": "{{parent.connectionType}}",
  "title": "Connection Config for {{parent.connectionType}} connection",
  "help": "<h1>{{parent.connectionType}} Connection</h1> <b>{{{escapeChars parent.description}}}</b>",
  "elements": [
    {
      "type": "attribute",
      "value": {
        "name": "connectionName",
        "displayName": "Connection Name",
        "inputType": "string",
        "defaultValue": "{{parent.connectionType}}_connection_1",
        "required": "true",
        "helpTip": "The name for the {{parent.connectionType}} connection",
        "validation": "nameWithoutSpecialCharactors"
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Basic",
              "elements": [
                {{writeConfigJsonProperties this}}
              ]
            }
          }
        ]
      }
    }
  ]
}
