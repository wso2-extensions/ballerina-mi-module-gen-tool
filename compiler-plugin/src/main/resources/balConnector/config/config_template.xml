<template name="init" onError="fault" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="name" description="Unique name the connection is identified by"/>
    <parameter name="connectionType" description="Connection type"/>
    <!-- TODO: if union, the selected member type becomes a parameter-->
    {{#each connections ~}}
    {{#each initComponent.queryParams ~}}
    <parameter name="{{../connectionType}}_{{name}}" description="{{documentation}}"/>
    {{/each ~}}
    {{/each ~}}
    <sequence>
        {{#each connections ~}}
        <property name="{{connectionType}}_objectTypeName" value="{{objectTypeName}}"/>
        {{#each initComponent.params ~}}
        <property name="{{../connectionType}}_param{{@index}}" value="{{name}}"/>
        {{/each ~}}
        {{writeConfigXmlProperties this}}
        {{/each ~}}
        <class name="io.ballerina.stdlib.mi.BalConnectorConfig"/>
    </sequence>
</template>
