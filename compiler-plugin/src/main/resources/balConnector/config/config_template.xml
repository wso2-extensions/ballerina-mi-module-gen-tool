<template name="init" onError="fault" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="name" description="Unique name the connection is identified by"/>
    {{#each parameters ~}}
    <parameter name="{{name}}" description="init function"/>
    {{/each ~}}
    <sequence>
        <property name="objectTypeName" value="{{objectTypeName}}"/>
        {{#each params ~}}
        <property name="param{{index}}" value="{{name}}"/>
        {{/each ~}}
        {{#each parameters ~}}
        <property name="param{{index}}" value="{{name}}"/>
        <property name="paramType{{index}}" value="{{typeName}}"/>
        {{#if (eq typeName "record")}}
        <property name="recordName{{index}}" value="{{typeInfo.name}}"/>
        {{/if}}
        {{/each ~}}
        <property name="name" expression="$func:name"/>
        <class name="io.ballerina.stdlib.mi.BalConnectorConfig"/>
    </sequence>
</template>
